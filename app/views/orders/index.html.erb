<h1>Order List</h1>
<% @orders.each do |order| %>
  <p>
    <%= "#{order.id} (Items: #{order.selections.count})" %>
    <%= link_to "Edit", edit_order_path(order) %>
  </p>
<% end %>

<%= link_to "New Order", new_order_path, class: "btn btn-primary" %>
<div class="mt-3">
  <%= link_to "Items Index", items_path %>
</div>
